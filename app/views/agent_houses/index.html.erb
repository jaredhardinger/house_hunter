<h3><%= link_to 'Houses Index', '/houses' %>   <%= link_to 'Agents Index' , '/agents' %></h3>
<h1>Houses listed by <%= @agent.name %>:</h1>
<% @houses.each do |house| %>
  <p><h3 class='house-addy'><%= link_to "#{house.address}", "/houses/#{house.id}" %></h3></p>
  <p>Price: $<%= house.price %></p>
  <p>On the Market?: <%= house.for_sale %></p>
  <p><small>created: <%= house.created_at %>, updated: <%= house.updated_at %></small></p>
<% end %>
<p><%= link_to 'Sort Alphabetically', "/agents/#{@agent.id}/houses?sort=alpha" %></p>
<p><%= link_to 'Add New House to Agent', "/agents/#{@agent.id}/houses/new" %></p>
